{
  "srcPaths": {
    "make": "src/engineering.make"
  },
  "domain": "jse.localacebuild",
  "buildPaths": {
    "packages": "build/packages"
  },
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**", "hooks/**"],
    "dest": {
      "docroot": "docroot"
    }
  },
  "phpcs": true,
  "phpmd": true,
  "behat": {
    "flags": "--tags ~@wip"
  },
  "eslint": true,
  "drush": {
    "path": "/usr/local/bin/drush",
    "make": {
      "args": ["--force-complete"]
    },
    "alias": "jse.localacebuild"
  },
  "scripts": {
    "settings": "cp src/sites/default/*.php build/html/sites/default/",
    "syncfiles": "[ -d build/html/sites/default/files ] || mkdir build/html/sites/default/files && rsync -rtv swssoe.dev@swssoedev.ssh.prod.acquia-sites.com:/mnt/files/swssoe.dev/sites/default/files/ build/html/sites/default/files/",
    "syncdb": "drush <%= config.alias %> sql-drop && drush sql-sync @swssoe.dev <%= config.alias %> && drush <%= config.alias %> dis stanford_ssp acquia_connector acquia_purge expire",
    "update": "drush <%= config.alias %> updb -yv",
    "reset": "drush <%= config.alias %> rr && drush <%= config.alias %> cc all",
    "localadmin": "drush <%= config.alias %> urol administrator 'admin' && drush <%= config.alias %> upwd admin --password=admin"
  }
}
