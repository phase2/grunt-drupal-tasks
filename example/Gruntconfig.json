{
  "srcPaths": {
    "make": "src/project.make",
    "drupal": "src"
  },
  "domain": "project.vm",
  "buildPaths": {
    "packages": "build/packages"
  },
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**", "hooks/**", "src/*.make", "vendor/**"],
    "dest": {
      "docroot": "html",
      "devResources": ""
    }
  },
  "phpcs": true,
  "phpmd": true,
  "behat": {
    "flags": "--tags ~@wip"
  },
  "eslint": true,
  "scripts": {
    "update": "<%= config.drush.cmd %> <%= config.alias %> features-revert-all -yv"
  }
}
